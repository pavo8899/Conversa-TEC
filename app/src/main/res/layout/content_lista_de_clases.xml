<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alejandroanzures.conversa_tec.Lista_Clases"
    tools:showIn="@layout/lista_de_clases">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorIconDisabled"
        android:orientation="vertical"
        android:showDividers="middle"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/textEditDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingRight="2dp"
                android:text="DD/MM/AAAA"
                android:textAlignment="center"
                android:textColor="@color/colorBookText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textEditClase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingLeft="2dp"
                android:text="TODAS"
                android:textAlignment="center"
                android:textColor="@color/colorBookText"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ListView
            android:id="@+id/listaclases"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
